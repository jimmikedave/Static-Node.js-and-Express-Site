extends layout.pug

block content 
  article.grid-container.portfolio-intro
    div

       
      h1 JMD's Portfolio

     
      p.lead.text-light
        | This portfolio site showcases my skills as a Full Stack JavaScript Developer. It uses Node.js, Express, and Pug to display
        | each client-side project I created as a Techdegree student at Treehouse. 
  article.grid-container.portfolio-index
    
    .grid-x.grid-margin-x.small-up-2.medium-up-2.large-up-3

      each program in project
        .cell
          a(href=`http://localhost:3000/projects/${program.id}`)
            img.thumbnail(src=`${program.imageUrls[0]}`)
            h5 #{program.projectName} 
      
